<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_210"
    android:layout_marginTop="@dimen/dp_8"
    android:padding="@dimen/dp_16">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_8">

        <android.support.v7.widget.CardView
            android:id="@+id/image_favorite_item_card"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:cardCornerRadius="@dimen/dp_16"
            app:cardElevation="@dimen/dp_8"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_favorite_item"
                android:layout_width="@dimen/dp_120"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/movie_detail_poster_sample" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/text_favorite_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_4"
            android:maxLines="2"
            android:paddingEnd="@dimen/dp_8"
            android:paddingStart="@dimen/dp_8"
            android:text="@string/sample_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textColor="@color/color_cast_item_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_favorite_item_card"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_favorite_item_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingEnd="@dimen/dp_8"
            android:paddingStart="@dimen/dp_8"
            android:text="@string/sample_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/color_search_item_overview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_favorite_item_card"
            app:layout_constraintTop_toBottomOf="@id/text_favorite_item_title" />

        <ImageView
            android:id="@+id/image_ic_favorite_item_rating"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_4"
            app:layout_constraintBottom_toBottomOf="@id/image_favorite_item_card"
            app:layout_constraintStart_toEndOf="@id/image_favorite_item_card"
            app:srcCompat="@drawable/ic_star_yellow_24dp" />

        <TextView
            android:id="@+id/text_favorite_item_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:text="@string/rating"
            app:layout_constraintStart_toEndOf="@id/image_ic_favorite_item_rating"
            app:layout_constraintTop_toTopOf="@id/image_ic_favorite_item_rating" />

        <TextView
            android:id="@+id/text_favorite_item_rating_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:text="@string/sample_text"
            app:layout_constraintStart_toEndOf="@+id/text_favorite_item_rating"
            app:layout_constraintTop_toTopOf="@id/image_ic_favorite_item_rating" />

        <ImageView
            android:id="@+id/float_favorite"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_12"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_favorite_white_40dp" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
