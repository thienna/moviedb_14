<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nganhthien.mikemovie">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screen.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".screen.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomAppTheme" />

        <activity
            android:name=".screen.detail.DetailActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/CustomAppTheme" />

        <activity
            android:name=".screen.youtube.YoutubeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".screen.person.PersonActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomAppTheme" />

        <activity
            android:name=".screen.company.CompanyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomAppTheme" />
    </application>

</manifest>
